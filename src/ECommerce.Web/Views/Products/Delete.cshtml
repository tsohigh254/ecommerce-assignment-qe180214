@model ECommerce.Core.Models.Product

@{
    ViewData["Title"] = $"Delete {Model.Name}";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Confirm Delete Product
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this product?
                    </div>

                    <!-- Product Information -->
                    <div class="row mb-4">
                        <!-- Product Image -->
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" style="max-height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                        </div>

                        <!-- Product Details -->
                        <div class="col-md-8">
                            <h3 class="text-primary fw-bold mb-3">@Model.Name</h3>
                            
                            <div class="mb-3">
                                <h4 class="text-success fw-bold">$@Model.Price.ToString("F2")</h4>
                            </div>

                            <div class="mb-3">
                                <h6 class="fw-bold text-muted">Description</h6>
                                <p class="text-muted">@Model.Description</p>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <h6 class="fw-bold text-muted">Product ID</h6>
                                    <p class="mb-2">#@Model.Id</p>
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="fw-bold text-muted">Created Date</h6>
                                    <p class="mb-2">
                                        <i class="fas fa-calendar me-1"></i>
                                        @Model.CreatedAt.ToString("MMMM dd, yyyy")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Summary Box -->
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="fw-bold text-muted mb-3">Product Summary</h6>
                            <div class="row">
                                <div class="col-md-3">
                                    <strong>Name:</strong><br>
                                    <span class="text-muted">@Model.Name</span>
                                </div>
                                <div class="col-md-3">
                                    <strong>Price:</strong><br>
                                    <span class="text-success fw-bold">$@Model.Price.ToString("F2")</span>
                                </div>
                                <div class="col-md-3">
                                    <strong>Created:</strong><br>
                                    <span class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="col-md-3">
                                    <strong>Status:</strong><br>
                                    <span class="badge bg-danger">Will be deleted</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <form asp-action="Delete" method="post">
                        <input asp-for="Id" type="hidden" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-lg me-2">
                                <i class="fas fa-eye me-2"></i>
                                View Details
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-2">
                                <i class="fas fa-arrow-left me-2"></i>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Are you absolutely sure you want to delete this product? This action cannot be undone.')">
                                <i class="fas fa-trash-alt me-2"></i>
                                Yes, Delete Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Additional Warning -->
            <div class="mt-3">
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Note:</strong> After deletion, you will be redirected to the products list. The product data will be permanently removed from the database.
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-danger {
        border-color: #dc3545 !important;
        border-width: 2px !important;
    }
    
    .card {
        border-radius: 15px;
    }
    
    .alert {
        border-radius: 10px;
    }
</style>