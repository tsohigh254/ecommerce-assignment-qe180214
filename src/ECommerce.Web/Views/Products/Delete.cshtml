@model ECommerce.Core.Models.Product

@{
    ViewData["Title"] = $"Delete {Model.Name}";
}

<div class="container">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Products</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none">@Model.Name</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-8">
            <!-- Warning Banner -->
            <div class="alert alert-danger border-0 shadow-lg mb-4 animate__animated animate__headShake">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-exclamation-triangle fa-3x"></i>
                    </div>
                    <div>
                        <h5 class="alert-heading mb-1">
                            <strong>Danger Zone!</strong>
                        </h5>
                        <p class="mb-0">
                            You are about to permanently delete this product. This action cannot be undone and all data will be lost forever.
                        </p>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-lg animate__animated animate__fadeInUp">
                <div class="card-header text-white p-4" style="background: var(--danger-gradient);">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-3 p-3 me-3">
                            <i class="fas fa-trash-alt fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">Confirm Product Deletion</h3>
                            <small class="opacity-75">Review the product details before confirming</small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4 p-md-5">
                    <!-- Product Preview -->
                    <div class="card border-0 shadow-sm mb-4" style="background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);">
                        <div class="card-body p-4">
                            <div class="row align-items-center">
                                <!-- Product Image -->
                                <div class="col-md-4 text-center mb-3 mb-md-0">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name" 
                                             style="max-height: 250px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center justify-content-center rounded shadow" 
                                             style="height: 250px; background: rgba(255,255,255,0.5);">
                                            <i class="fas fa-image fa-4x text-muted opacity-50"></i>
                                        </div>
                                    }
                                </div>

                                <!-- Product Details -->
                                <div class="col-md-8">
                                    <h3 class="fw-bold mb-3" style="color: var(--primary-color);">@Model.Name</h3>
                                    
                                    <div class="mb-3">
                                        <span class="display-6 fw-bold text-dark">$@Model.Price.ToString("F2")</span>
                                    </div>

                                    <div class="mb-3">
                                        <p class="text-dark mb-0">@Model.Description</p>
                                    </div>

                                    <div class="d-flex flex-wrap gap-3">
                                        <div>
                                            <small class="text-muted d-block">Product ID</small>
                                            <strong>#@Model.Id</strong>
                                        </div>
                                        <div>
                                            <small class="text-muted d-block">Created</small>
                                            <strong>@Model.CreatedAt.ToString("MMM dd, yyyy")</strong>
                                        </div>
                                        <div>
                                            <small class="text-muted d-block">Last Updated</small>
                                            <strong>@Model.UpdatedAt.ToString("MMM dd, yyyy")</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Deletion Impact -->
                    <div class="card border-0 bg-light mb-4">
                        <div class="card-body p-4">
                            <h6 class="fw-bold mb-3 text-danger">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                What will be deleted?
                            </h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-times-circle text-danger me-2 mt-1"></i>
                                        <div>
                                            <strong>Product Information</strong>
                                            <p class="mb-0 small text-muted">Name, description, and price</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-times-circle text-danger me-2 mt-1"></i>
                                        <div>
                                            <strong>Product Images</strong>
                                            <p class="mb-0 small text-muted">All associated image URLs</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-times-circle text-danger me-2 mt-1"></i>
                                        <div>
                                            <strong>Metadata</strong>
                                            <p class="mb-0 small text-muted">Created and updated timestamps</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <i class="fas fa-times-circle text-danger me-2 mt-1"></i>
                                        <div>
                                            <strong>Database Record</strong>
                                            <p class="mb-0 small text-muted">Permanent removal from database</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <form asp-action="Delete" method="post" id="deleteForm">
                        <input asp-for="Id" type="hidden" />
                        <div class="d-flex gap-3 flex-column flex-md-row">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-lg flex-fill">
                                <i class="fas fa-eye me-2"></i>
                                View Details
                            </a>
                            <a asp-action="Index" class="btn btn-success btn-lg flex-fill shadow">
                                <i class="fas fa-shield-alt me-2"></i>
                                Keep Product (Cancel)
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg flex-fill shadow" 
                                    onclick="return confirm('⚠️ FINAL WARNING ⚠️\n\nAre you absolutely certain you want to delete this product?\n\n✗ This action is PERMANENT\n✗ All data will be LOST FOREVER\n✗ This CANNOT be undone\n\nType YES in the next prompt if you are sure.')">
                                <i class="fas fa-trash-alt me-2"></i>
                                Delete Permanently
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card border-0 shadow-sm mt-4 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="me-3">
                            <i class="fas fa-info-circle fa-2x text-info"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-2">Important Information</h6>
                            <ul class="mb-0 text-muted small">
                                <li class="mb-1">After deletion, you will be automatically redirected to the products list</li>
                                <li class="mb-1">The product data will be permanently removed from the database</li>
                                <li class="mb-1">There is no way to recover deleted products</li>
                                <li>Consider exporting or backing up important data before deletion</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>