@model ECommerce.Core.Models.Product

@{
    ViewData["Title"] = $"{Model.Name} - Product Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <!-- Product Image -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img product-detail-image" alt="@Model.Name">
                }
                else
                {
                    <div class="card-img d-flex align-items-center justify-content-center bg-light" style="height: 400px;">
                        <i class="fas fa-image fa-4x text-muted"></i>
                    </div>
                }
            </div>
        </div>

        <!-- Product Information -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h1 class="card-title text-primary fw-bold mb-3">@Model.Name</h1>
                    
                    <div class="mb-4">
                        <h2 class="text-success fw-bold mb-0">$@Model.Price.ToString("F2")</h2>
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-bold text-muted">Description</h5>
                        <p class="card-text">@Model.Description</p>
                    </div>

                    <!-- Product Details -->
                    <div class="row mb-4">
                        <div class="col-sm-6">
                            <h6 class="fw-bold text-muted">Product ID</h6>
                            <p class="mb-2">#@Model.Id</p>
                        </div>
                        <div class="col-sm-6">
                            <h6 class="fw-bold text-muted">Added Date</h6>
                            <p class="mb-2">
                                <i class="fas fa-calendar me-1"></i>
                                @Model.CreatedAt.ToString("MMMM dd, yyyy")
                            </p>
                        </div>
                        @if (Model.UpdatedAt != Model.CreatedAt)
                        {
                            <div class="col-sm-6">
                                <h6 class="fw-bold text-muted">Last Updated</h6>
                                <p class="mb-2">
                                    <i class="fas fa-edit me-1"></i>
                                    @Model.UpdatedAt.ToString("MMMM dd, yyyy")
                                </p>
                            </div>
                        }
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2">
                        <div class="row">
                            <div class="col-sm-4">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100">
                                    <i class="fas fa-edit me-2"></i>
                                    Edit Product
                                </a>
                            </div>
                            <div class="col-sm-4">
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger w-100">
                                    <i class="fas fa-trash me-2"></i>
                                    Delete Product
                                </a>
                            </div>
                            <div class="col-sm-4">
                                <a asp-action="Index" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Information -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Product Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <strong>Name:</strong><br>
                            <span class="text-muted">@Model.Name</span>
                        </div>
                        <div class="col-md-4">
                            <strong>Price:</strong><br>
                            <span class="text-success fw-bold">$@Model.Price.ToString("F2")</span>
                        </div>
                        <div class="col-md-4">
                            <strong>Status:</strong><br>
                            <span class="badge bg-success">Available</span>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-12">
                            <strong>Description:</strong><br>
                            <span class="text-muted">@Model.Description</span>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <hr>
                        <div class="row">
                            <div class="col-md-12">
                                <strong>Image URL:</strong><br>
                                <a href="@Model.ImageUrl" target="_blank" class="text-break">@Model.ImageUrl</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-detail-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
    }
    
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .badge {
        font-size: 0.875rem;
    }
</style>