@model ECommerce.Core.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Products</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Create New Product</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-8">
            <div class="card border-0 shadow-lg animate__animated animate__fadeInUp">
                <div class="card-header text-white p-4" style="background: var(--success-gradient);">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-3 p-3 me-3">
                            <i class="fas fa-plus-circle fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">Add New Product</h3>
                            <small class="opacity-75">Fill in the details to create a new product</small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create" method="post" id="createForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm" role="alert"></div>
                        
                        <!-- Product Name -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold d-flex align-items-center">
                                <i class="fas fa-tag me-2 text-primary"></i>
                                Product Name <span class="text-danger ms-1">*</span>
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg shadow-sm" 
                                   placeholder="e.g., Premium Cotton T-Shirt"
                                   autofocus>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold d-flex align-items-center">
                                <i class="fas fa-align-left me-2 text-primary"></i>
                                Description <span class="text-danger ms-1">*</span>
                            </label>
                            <textarea asp-for="Description" class="form-control shadow-sm" rows="5" 
                                      placeholder="Describe your product in detail..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Provide a detailed description to attract customers
                            </div>
                        </div>

                        <div class="row">
                            <!-- Price -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="Price" class="form-label fw-bold d-flex align-items-center">
                                    <i class="fas fa-dollar-sign me-2 text-success"></i>
                                    Price <span class="text-danger ms-1">*</span>
                                </label>
                                <div class="input-group input-group-lg shadow-sm">
                                    <span class="input-group-text">
                                        <i class="fas fa-dollar-sign"></i>
                                    </span>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="0.00">
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                            
                            <!-- Image URL -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="ImageUrl" class="form-label fw-bold d-flex align-items-center">
                                    <i class="fas fa-image me-2 text-info"></i>
                                    Image URL
                                </label>
                                <div class="input-group input-group-lg shadow-sm">
                                    <span class="input-group-text bg-white">
                                        <i class="fas fa-link"></i>
                                    </span>
                                    <input asp-for="ImageUrl" class="form-control" type="url" placeholder="https://...">
                                </div>
                                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="fas fa-lightbulb me-1"></i>
                                    Optional: Direct image URL for better display
                                </div>
                            </div>
                        </div>

                        <!-- Image Preview -->
                        <div class="mb-4" id="imagePreview" style="display: none;">
                            <label class="form-label fw-bold d-flex align-items-center">
                                <i class="fas fa-eye me-2 text-primary"></i>
                                Image Preview
                            </label>
                            <div class="card border-0 shadow-sm bg-light">
                                <div class="card-body text-center p-4">
                                    <img id="previewImg" src="" alt="Image Preview" 
                                         style="max-width: 100%; max-height: 300px; object-fit: contain; border-radius: var(--radius-md);">
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 mt-5 flex-column flex-sm-row">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg flex-fill">
                                <i class="fas fa-times me-2"></i>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-success btn-lg flex-fill shadow">
                                <i class="fas fa-check-circle me-2"></i>
                                Create Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Helpful Tips Card -->
            <div class="card border-0 shadow-sm mt-4 animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">
                        <i class="fas fa-lightbulb text-warning me-2"></i>
                        Tips for Adding Products
                    </h6>
                    <ul class="mb-0 text-muted small">
                        <li class="mb-2">Use clear and descriptive product names</li>
                        <li class="mb-2">Write detailed descriptions highlighting key features</li>
                        <li class="mb-2">Set competitive pricing based on market research</li>
                        <li>Use high-quality images with direct URLs (e.g., from Unsplash, Imgur)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Image URL preview
        document.getElementById('ImageUrl').addEventListener('input', function() {
            var url = this.value;
            var preview = document.getElementById('imagePreview');
            var img = document.getElementById('previewImg');
            
            if (url && isValidUrl(url)) {
                img.src = url;
                img.onload = function() {
                    preview.style.display = 'block';
                };
                img.onerror = function() {
                    preview.style.display = 'none';
                };
            } else {
                preview.style.display = 'none';
            }
        });
        
        function isValidUrl(string) {
            try {
                new URL(string);
                return true;
            } catch (_) {
                return false;
            }
        }
    </script>
}