@model ECommerce.Core.Models.Product

@{
    ViewData["Title"] = $"Edit {Model.Name}";
}

<div class="container">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Products</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none">@Model.Name</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-8">
            <div class="card border-0 shadow-lg animate__animated animate__fadeInUp">
                <div class="card-header text-dark p-4" style="background: var(--warning-gradient);">
                    <div class="d-flex align-items-center">
                        <div class="bg-dark bg-opacity-10 rounded-3 p-3 me-3">
                            <i class="fas fa-edit fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold">Edit Product</h3>
                            <small class="opacity-75">Update information for: @Model.Name</small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit" method="post" id="editForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 shadow-sm" role="alert"></div>
                        
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedAt" type="hidden" />

                        <!-- Product Name -->
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold d-flex align-items-center">
                                <i class="fas fa-tag me-2 text-primary"></i>
                                Product Name <span class="text-danger ms-1">*</span>
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg shadow-sm" placeholder="Enter product name">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold d-flex align-items-center">
                                <i class="fas fa-align-left me-2 text-primary"></i>
                                Description <span class="text-danger ms-1">*</span>
                            </label>
                            <textarea asp-for="Description" class="form-control shadow-sm" rows="5" placeholder="Enter product description"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <!-- Price -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="Price" class="form-label fw-bold d-flex align-items-center">
                                    <i class="fas fa-dollar-sign me-2 text-success"></i>
                                    Price <span class="text-danger ms-1">*</span>
                                </label>
                                <div class="input-group input-group-lg shadow-sm">
                                    <span class="input-group-text">
                                        <i class="fas fa-dollar-sign"></i>
                                    </span>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="0.00">
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                            
                            <!-- Image URL -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="ImageUrl" class="form-label fw-bold d-flex align-items-center">
                                    <i class="fas fa-image me-2 text-info"></i>
                                    Image URL
                                </label>
                                <div class="input-group input-group-lg shadow-sm">
                                    <span class="input-group-text bg-white">
                                        <i class="fas fa-link"></i>
                                    </span>
                                    <input asp-for="ImageUrl" class="form-control" type="url" placeholder="https://...">
                                </div>
                                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Current Image Preview -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-4">
                                <label class="form-label fw-bold d-flex align-items-center">
                                    <i class="fas fa-image me-2 text-primary"></i>
                                    Current Image
                                </label>
                                <div class="card border-0 shadow-sm bg-light">
                                    <div class="card-body text-center p-4">
                                        <img src="@Model.ImageUrl" alt="Current Image" 
                                             style="max-width: 100%; max-height: 300px; object-fit: contain; border-radius: var(--radius-md);">
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- New Image Preview -->
                        <div class="mb-4" id="imagePreview" style="display: none;">
                            <label class="form-label fw-bold d-flex align-items-center">
                                <i class="fas fa-eye me-2 text-success"></i>
                                New Image Preview
                            </label>
                            <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #d4fc79 0%, #96e6a1 100%);">
                                <div class="card-body text-center p-4">
                                    <img id="previewImg" src="" alt="Image Preview" 
                                         style="max-width: 100%; max-height: 300px; object-fit: contain; border-radius: var(--radius-md);">
                                </div>
                            </div>
                        </div>

                        <!-- Product Metadata -->
                        <div class="card bg-light border-0 mb-4">
                            <div class="card-body">
                                <h6 class="fw-bold mb-3">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Product Information
                                </h6>
                                <div class="row">
                                    <div class="col-md-4 mb-2 mb-md-0">
                                        <small class="text-muted d-block">Product ID</small>
                                        <strong>#@Model.Id</strong>
                                    </div>
                                    <div class="col-md-4 mb-2 mb-md-0">
                                        <small class="text-muted d-block">Created</small>
                                        <strong>@Model.CreatedAt.ToString("MMM dd, yyyy")</strong>
                                    </div>
                                    <div class="col-md-4">
                                        <small class="text-muted d-block">Last Updated</small>
                                        <strong>@Model.UpdatedAt.ToString("MMM dd, yyyy")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 mt-5 flex-column flex-md-row">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-lg flex-fill">
                                <i class="fas fa-eye me-2"></i>
                                View Details
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg flex-fill">
                                <i class="fas fa-times me-2"></i>
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg flex-fill shadow">
                                <i class="fas fa-save me-2"></i>
                                Update Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Image URL preview for new image
        document.getElementById('ImageUrl').addEventListener('input', function() {
            var url = this.value;
            var preview = document.getElementById('imagePreview');
            var img = document.getElementById('previewImg');
            var currentImageUrl = '@Model.ImageUrl';
            
            if (url && url !== currentImageUrl && isValidUrl(url)) {
                img.src = url;
                img.onload = function() {
                    preview.style.display = 'block';
                };
                img.onerror = function() {
                    preview.style.display = 'none';
                };
            } else {
                preview.style.display = 'none';
            }
        });
        
        function isValidUrl(string) {
            try {
                new URL(string);
                return true;
            } catch (_) {
                return false;
            }
        }
    </script>
}