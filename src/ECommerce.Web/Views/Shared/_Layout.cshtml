<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce Store QE180214</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerce.Web.styles.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Animate.css for animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
            <div class="container">
                <a class="navbar-brand fw-bold animate__animated animate__fadeInLeft" asp-controller="Products" asp-action="Index">
                    <i class="fas fa-gem me-2"></i>
                    <span class="text-gradient-white">EliteShop</span>
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto ms-lg-4">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-controller="Products" asp-action="Index">
                                <i class="fas fa-shopping-bag me-2"></i>
                                Shop
                            </a>
                        </li>
                        @if (Context.Session.GetString("JWTToken") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3" asp-controller="Products" asp-action="Create">
                                    <i class="fas fa-plus-circle me-2"></i>
                                    New Product
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav align-items-center">
                        @if (Context.Session.GetString("JWTToken") != null)
                        {
                            <!-- Cart Link with Badge -->
                            <li class="nav-item me-2">
                                <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                    <i class="fas fa-shopping-cart fa-lg"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" 
                                          id="cart-badge" style="font-size: 0.6rem;">
                                        0
                                    </span>
                                </a>
                            </li>
                            
                            <!-- Orders Link -->
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-controller="Orders" asp-action="Index" title="My Orders">
                                    <i class="fas fa-box fa-lg"></i>
                                </a>
                            </li>
                            
                            <!-- User Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" 
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="bg-white bg-opacity-25 rounded-circle p-2 me-2">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <span class="d-none d-md-inline">@Context.Session.GetString("UserEmail")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                                            <i class="fas fa-box me-2"></i>
                                            My Orders
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Cart" asp-action="Index">
                                            <i class="fas fa-shopping-cart me-2"></i>
                                            My Cart
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i>
                                                Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- Login/Register Links -->
                            <li class="nav-item">
                                <a class="nav-link px-3" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-light btn-sm ms-2" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-2"></i>
                                    Register
                                </a>
                            </li>
                        }
                        
                        <!-- Student ID Badge -->
                        <li class="nav-item ms-3">
                            <span class="navbar-text text-white px-3 d-flex align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="bg-white bg-opacity-25 rounded-circle p-2 me-2">
                                        <i class="fas fa-user-graduate"></i>
                                    </div>
                                    <div class="d-flex flex-column align-items-start">
                                        <small class="opacity-75" style="font-size: 0.7rem;">Student ID</small>
                                        <span class="fw-bold" style="font-size: 0.9rem;">QE180214</span>
                                    </div>
                                </div>
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="flex-grow-1 py-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-4 col-md-6 mb-3 mb-lg-0">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-gem fa-2x me-3 text-gradient-white"></i>
                        <div>
                            <h6 class="fw-bold mb-0">EliteShop</h6>
                            <small class="text-muted">Premium E-Commerce</small>
                        </div>
                    </div>
                    <p class="mb-0 small text-muted">
                        Modern CRUD REST API + UI Implementation
                    </p>
                </div>
                <div class="col-lg-4 col-md-6 mb-3 mb-lg-0">
                    <h6 class="fw-bold mb-2">
                        <i class="fas fa-code me-2"></i>
                        Technology Stack
                    </h6>
                    <div class="d-flex flex-wrap gap-2">
                        <span class="badge bg-light text-dark">.NET 8</span>
                        <span class="badge bg-light text-dark">Bootstrap 5</span>
                        <span class="badge bg-light text-dark">PostgreSQL</span>
                        <span class="badge bg-light text-dark">Docker</span>
                    </div>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <div class="mb-2">
                        <i class="fas fa-graduation-cap me-2"></i>
                        <span class="fw-bold">Student ID: QE180214</span>
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-calendar-alt me-2"></i>
                        <span>Assignment 1 - 2025</span>
                    </div>
                    <small class="text-muted d-block">
                        &copy; 2025 All Rights Reserved
                    </small>
                </div>
            </div>
            <hr class="my-3 border-secondary opacity-25" />
            <div class="row">
                <div class="col-12 text-center">
                    <small class="text-muted">
                        Built with <i class="fas fa-heart text-danger"></i> for educational purposes
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Cart Badge Update Script -->
    <script>
        // Update cart badge on page load
        $(document).ready(function() {
            updateCartBadge();
        });

        function updateCartBadge() {
            @if (Context.Session.GetString("JWTToken") != null)
            {
                <text>
                $.ajax({
                    url: '/Cart/GetCartItemCount',
                    type: 'GET',
                    success: function(count) {
                        var badge = $('#cart-badge');
                        if (count > 0) {
                            badge.text(count).show();
                        } else {
                            badge.text('0').hide();
                        }
                    },
                    error: function() {
                        $('#cart-badge').text('0').hide();
                    }
                });
                </text>
            }
        }

        // Call this function after adding items to cart
        window.updateCartBadge = updateCartBadge;
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    <style>
        .text-gradient-white {
            background: linear-gradient(135deg, #ffffff 0%, #e0e0e0 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
    </style>
</body>
</html>
