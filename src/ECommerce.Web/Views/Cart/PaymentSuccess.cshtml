@model ECommerce.Web.Models.OrderViewModel
@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Message -->
            <div class="text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                </div>
                <h1 class="display-4 text-success">Payment Successful!</h1>
                <p class="lead text-muted">Thank you for your order. Your payment has been processed successfully.</p>
            </div>

            <!-- Order Details Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-receipt"></i> Order Confirmation
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Order Number:</strong></p>
                            <p class="text-primary">#@Model.OrderId</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Order Date:</strong></p>
                            <p>@Model.OrderDate.ToString("MMM dd, yyyy hh:mm tt")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Order Status:</strong></p>
                            <p><span class="@Model.StatusBadgeClass">@Model.Status</span></p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Payment Status:</strong></p>
                            <p><span class="@Model.PaymentStatusBadgeClass">@Model.PaymentStatus</span></p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.PaymentIntentId))
                    {
                        <div class="row mb-3">
                            <div class="col-12">
                                <p class="mb-1"><strong>Payment ID:</strong></p>
                                <p class="text-muted small">@Model.PaymentIntentId</p>
                            </div>
                        </div>
                    }

                    <hr>

                    <h6 class="mb-3">Order Items:</h6>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.ProductImageUrl))
                                                {
                                                    <img src="@item.ProductImageUrl" alt="@item.ProductName" 
                                                         class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                }
                                                <span>@item.ProductName</span>
                                            </div>
                                        </td>
                                        <td>$@item.Price.ToString("F2")</td>
                                        <td>@item.Quantity</td>
                                        <td class="text-end">$@item.Subtotal.ToString("F2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                    <td class="text-end"><strong class="text-success">$@Model.TotalAmount.ToString("F2")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Information Alert -->
            <div class="alert alert-info" role="alert">
                <h6 class="alert-heading">
                    <i class="bi bi-info-circle"></i> What's Next?
                </h6>
                <p class="mb-0">
                    A confirmation email has been sent to your registered email address. 
                    You can track your order status in the <a href="@Url.Action("Index", "Orders")" class="alert-link">My Orders</a> page.
                </p>
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-center mb-4">
                <a href="@Url.Action("Index", "Orders")" class="btn btn-primary btn-lg">
                    <i class="bi bi-list-ul"></i> View My Orders
                </a>
                <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-shop"></i> Continue Shopping
                </a>
            </div>

            <!-- Thank You Message -->
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h5 class="card-title">Thank You for Shopping With Us!</h5>
                    <p class="card-text text-muted mb-0">
                        We appreciate your business and hope you enjoy your purchase.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Prevent user from going back to checkout page
        window.history.pushState(null, "", window.location.href);
        window.onpopstate = function() {
            window.history.pushState(null, "", window.location.href);
        };
    </script>
}
